{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["esnext.asynciterable", "es2017.object", "es2016", "dom"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": ["src", "typings"]
}
